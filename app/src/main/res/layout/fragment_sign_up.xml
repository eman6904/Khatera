<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_30sdp">

    <!-- Image Top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/eye"/>
    </LinearLayout>

    <!-- User Name -->
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="@dimen/_12sdp"
        android:hint="@string/enter_name"
        android:textColor="@android:color/white"
        android:textColorHint="#CEE8BC"
        android:background="@drawable/rounded_border"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/nameRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:textColor="#C30B0B"
        android:visibility="invisible"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>

    <!-- Email -->
    <EditText
        android:id="@+id/email2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="@dimen/_12sdp"
        android:hint="@string/enter_email"
        android:textColor="@android:color/white"
        android:textColorHint="#CEE8BC"
        android:background="@drawable/rounded_border"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/emailrequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:textColor="#C30B0B"
        android:visibility="invisible"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>

    <!-- Password -->
    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="@dimen/_12sdp"
        android:hint="@string/enter_password"
        android:textColor="@android:color/white"
        android:textColorHint="#CEE8BC"
        android:background="@drawable/rounded_border"
        android:drawableStart="@drawable/lock_open"
        android:drawableEnd="@drawable/visibility"
        android:drawablePadding="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"/>
    <TextView
        android:id="@+id/passwordrequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:textColor="#C30B0B"
        android:visibility="invisible"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"/>

    <!-- Button + ProgressBar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/register"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:clickable="true"
            android:background="@drawable/rounded_shape"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:indeterminateTint="#FFFFFF"/>
    </FrameLayout>

</LinearLayout>
